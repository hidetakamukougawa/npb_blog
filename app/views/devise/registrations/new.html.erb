<!-- メイン -->
<main>
  <!-- お問合せフォーム -->
  <div class="py-3">
    <div class="container">
      <h1 class="mb-3 text-center">新規登録</h1>
      <!-- フォーム -->
      <div class="border w-50 p-3 mx-auto">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group">
            <%= f.label :名前 %><br />
            <%= f.text_field :name,autofocus: true, maxlength: "12",class: "form-control",id: 'name' %>
          </div>
          <div class="form-group">
            <%= f.label :アイコン画像 %><br />
            <%= f.file_field :avatar %>
          </div>
          <div class="form-group">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",id: 'email' %>
          </div>
          <div class="form-group">
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control",id: 'password' %>
          </div>
          <div class="form-group">
            <%= f.label :パスワード再確認 %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control",id: 'password_confirmation' %>
          </div>
          <%= f.submit "登録する", class: "w-100 btn btn-primary d-block mx-auto" %>
        <% end %>
        <%= form_with(model: @user, url: user_session_path) do |f| %>
          <%= f.hidden_field :email, value: 'test@example.com' %>
          <%= f.hidden_field :password, value: '123456' %>
          <%= f.submit 'テストユーザーでログイン', class: 'btn btn-success d-block mx-auto w-100 mt-3' %>
        <% end %>
      </div>
      <!-- /フォーム -->
    </div>
  </div>
  <!-- / お問合せフォーム -->
</main>
<!-- /メイン -->

<p class="text-center">アカウントをお持ちですか？<%= link_to "ログインする", user_session_path %></p>
