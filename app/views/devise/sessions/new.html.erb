<!-- メイン -->
<main>
  <!-- お問合せフォーム -->
  <div class="py-3">
    <div class="container">
      <h1 class="mb-3 text-center">ログイン</h1>
      <!-- フォーム -->
      <div class="border w-50 p-3 mx-auto">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group d-block mx-auto">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="form-group d-block mx-auto">
             <%= f.label :パスワード %><br />
             <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          <%= f.submit "ログイン", class: "w-100 btn btn-primary d-block mx-auto" %>
        <% end %>
        <%= form_with(model: @user, url: user_session_path) do |f| %>
          <%= f.hidden_field :email, value: 'test@example.com' %>
          <%= f.hidden_field :password, value: '123456' %>
          <%= f.submit 'テストユーザーでログイン', class: 'btn btn-success d-block mx-auto w-100 mt-3' %>
        <% end %>
      </div>
      <!-- /フォーム -->
    </div>
  </div>
  <!-- / お問合せフォーム -->
</main>
<!-- /メイン -->

