<% if user_signed_in? %>

  <% unless tweet.like_user(current_user.id).blank? %>
    <%= link_to tweet_like_path(tweet_id: tweet.id, id: tweet.likes[0].id), method: :delete, remote: true do %>
      <div class="vertical_like">
        <i class="fas fa-heart">いいね</i>
        <span class="text-secondary">
          <%= tweet.likes_count %>
        </span>
      </div>
    <% end %>
  <% else %>
    <%= link_to tweet_likes_path(tweet.id), method: :post, remote: true do %>
      <div class="vertical_like">
        <i class="far fa-heart">いいね</i>
        <span class="text-secondary">
          <%= tweet.likes_count %>
        </span>
      </div>
    <% end %>
  <% end %>

<% else %>

  <% if tweet.likes_count.to_i > 0 %>
    <div class="vertical_like">
      <i class="fas fa-heart">いいね</i>
      <span class="text-secondary">
        <%= tweet.likes_count %>
      </span>
    </div>
  <% else %>
    <div class="vertical_like">
      <i class="far fa-heart">いいね</i>
      <span class="text-secondary">
        <%= tweet.likes_count %>
      </span>
    </div >
  <% end %>

<% end %>
