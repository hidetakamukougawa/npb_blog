<div class="border w-75 p-3 mx-auto">
  <%= form_with model: tweet, local: true do |f| %>
    <div class="form-group">
      <%= f.label :タイトル %>
      <%= f.text_field :title, class: "form-control", placeholder: "タイトルを入力", id: "title" %>
    </div>
    <div class="form-group">
      <%= f.label :画像を選択 %>
      <%= f.file_field :image, class: "form-control-file", id: "image" %>
    </div>
    <div class="form-group">
      <%= f.label :テキスト %>
      <%= f.text_area :text, class: "form-control", rows: 8, id: "text" %>
    </div>
    <%= f.submit "投稿する", class: "w-100 btn btn-primary d-block mx-auto" %>
  <% end %>
</div>
