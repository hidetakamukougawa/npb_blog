<div class="container">
  <div class="jumbotron jumbotron-fluid">
    <h1 class="npb-blog-title text-white p-3 badge badge-primary">プロ野球掲示板</h1>
    <p class="lead">好きなプロ野球の話題について語り会おう！！</p>
    <%= search_form_for @q, class: "form-inline my-2 my-lg-0 d-block mx-auto" do |f| %>
      <%= f.search_field :title_cont, class: "form-control mr-sm-2", placeholder: "検索する" %>
      <%= f.submit "検索", class: "btn btn-success my-2 my-sm-0" %>
    <% end %>
  </div>
</div>
<div class="container">
  <%= render partial: "tweet", locals: { tweets: @tweets } %>
</div>

